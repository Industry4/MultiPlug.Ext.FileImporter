@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded" autocomplete="off">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">File Importer</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>


        <div class="row-fluid">
            <div class="box non-collapsible">

                <table id="filesTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="span10">File Type Description</th>
                            <th class="span2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Extension.Model.Guid.Length; i++)
                        {
                            <tr>
                                <td class="span10"><a href="@Raw(Model.Context.Paths.Home)file/?id=@Model.Extension.Model.Guid[i]">@Model.Extension.Model.Type[i]</a></td>
                                <td class="span2">
                                    <div class="btn-group">
                                        <a class="btn btn-blue" href="@Raw(Model.Context.Paths.Home)file/?id=@Model.Extension.Model.Guid[i]">
                                            <i class="icon-edit"></i>
                                        </a>
                                        <a class="btn btn-red btn-deletefile" href="@Raw(Model.Context.Paths.Home)file/delete/?id=@Model.Extension.Model.Guid[i]">
                                            <i class="icon-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td class="span10"></td>
                            <td class="span2"><button type="button" class="btn btn-green" id="btn-newfile"><i class="icon-plus"></i></button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script type="text/javascript" src="@Raw(Model.Context.Paths.Assets)js/files.js"></script>
</form>

