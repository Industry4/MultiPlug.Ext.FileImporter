@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded" autocomplete="off">
    <section class="row-fluid">
        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">File Importer</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>
        @Include("MultiPlug.Ext.FileImporter.FileImporter_Settings_NavBar")
        <div class="row-fluid">
            <div class="box non-collapsible">
                <h4>File Properties</h4>
                <div class="row-fluid">
                    <div class="well">
                        <div class="row-fluid">
                            <input type="hidden" name="Guid" value="@Model.Extension.Model.Guid">
                            <input type="text" name="Description" class="span3" placeholder="File Type Description" value="@Raw(Model.Extension.Model.Description)">
                        </div>
                    </div>
                </div>
                <h4>Headings</h4>
                <div class="row-fluid">
                    <div class="well">
                        <div class="row-fluid">
                            <table id="HeadingsTable" class="table table-striped">
                                <tbody>
                                    @for (int i = 0; i < Model.Extension.Model.Headings.Length; i++)
                                    {
                                        <tr>
                                            <td class="span11">
                                                <input type="text" name="Headings" class="span3" placeholder="Heading Name" value="@Raw(Model.Extension.Model.Headings[i])">
                                            </td>
                                            <td class="span1">
                                                <a class="btn btn-red btn-deleteHeading" href="@Raw(Model.Context.Paths.Home)file/delete/?id=@Model.Extension.Model.Headings[i]">
                                                    <i class="icon-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="span11"></td>
                                        <td class="span1"><button type="button" class="btn btn-green" id="btn-newHeading"><i class="icon-plus"></i></button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript" src="@Raw(Model.Context.Paths.Assets)js/file.js"></script>
</form>

