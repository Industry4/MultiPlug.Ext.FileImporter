@model MultiPlug.Base.Http.EdgeApp
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">File Importer</p>
                </div>
                <div class="span4" style="text-align: right;">
                </div>
            </div>
        </div>

        @for (int i = 0; i < Model.Extension.Model.Guid.Length; i++)
        {
            <form id="form-@Model.Extension.Model.Guid[i]" action="@Raw(Model.Context.Paths.Home)?id=@Model.Extension.Model.Guid[i]" method="post" accept-charset="utf-8" enctype="multipart/form-data"></form>
        }

        <div class="row-fluid">
        <div class="box non-collapsible">

            <table id="filesTable" class="table table-striped">
                <thead>
                    <tr>
                        <th class="span4">File Type Description</th>
                        <th class="span5">Location</th>
                        <th class="span3"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Extension.Model.Guid.Length; i++)
                    {
                        <tr>
                            <td class="span4">@Model.Extension.Model.Type[i]</td>
                            <td class="span5"><input form="form-@Model.Extension.Model.Guid[i]" type="file" class="form-control" name="file" accept=".tsv,.csv"></td>
                            <td class="span3"><button form="form-@Model.Extension.Model.Guid[i]" type="submit" value="submit" class="btn btn-green input-block-level">Upload</button></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </section>


